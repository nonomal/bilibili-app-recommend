{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build:vite": {
      "dependsOn": ["build:scss"],
      "env": ["RELEASE", "RELEASE_NIGHTLY", "MINIFY", "GHD_DESCRIBE"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "vite.config.ts",
        "uno.config.ts",
        "package.json"
      ],
      "outputs": ["dist/*.user.js"]
    },
    "build:vite-raw": {
      "dependsOn": ["build:scss"],
      "env": ["RELEASE", "RELEASE_NIGHTLY", "MINIFY", "GHD_DESCRIBE"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "vite.config.ts",
        "uno.config.ts",
        "package.json"
      ],
      "outputs": ["dist/bilibili-gate.user.js"]
    },
    "typecheck": {
      "dependsOn": ["build:scss"],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig.json"]
    },
    "build:scss": {
      "inputs": ["src/**/*.scss"],
      "outputs": ["src/**/*.scss.d.ts"]
    }
  }
}
